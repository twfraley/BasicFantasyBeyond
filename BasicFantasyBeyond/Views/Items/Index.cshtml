        </th>
        <th>
            Armor Type:
        </th>
        <th>
            Notes:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.ItemType == BasicFantasyBeyond.Models.EquipmentModels.ItemType.Armor ||
            item.ItemType == BasicFantasyBeyond.Models.EquipmentModels.ItemType.Shield)
        {

            <tr>
                @Html.HiddenFor(modelItem => item.ItemID)
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArmorClassBonus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArmorType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNotes)
                </td>
                <td>
                    <div class="btn-group rounded-0">
                        <button type="button" class="btn btn-light border rounded-0">
                            @Html.ActionLink("Edit Item", "Edit", new { id = item.ItemID }, new { @class = "button btn-light" })
                        </button>
                        <button type="button" class="btn btn-light border rounded-0">
                            @Html.ActionLink("Delete Item", "Delete", new { id = item.ItemID }, new { @class = "button btn-light" })
                        </button>
                    </div>
                </td>
            </tr>
        }
    }
</table>


