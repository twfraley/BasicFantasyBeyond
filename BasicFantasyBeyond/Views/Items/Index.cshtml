@model IEnumerable<BasicFantasyBeyond.Models.EquipmentModels.ItemListItem>

@{
    ViewBag.Title = "Items";
}
<p />
<h2>Item List</h2>
<p>
    @Html.ActionLink("Create New Item", "Create", "", new { @class = "btn btn-dark rounded-0" })
</p>

<div class="col-12 border-top bg-dark text-light">
    <div class="lead ">Weapons:</div>
</div>

<table class="table">
    <tr class="bg-light">
        <th>
            Name:
        </th>
        <th>
            Damage:
        </th>
        <th>
            Damage Type:
        </th>
        <th>
            Notes:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.ItemType == BasicFantasyBeyond.Models.EquipmentModels.ItemType.Weapon)
        {

            <tr>
                @Html.HiddenFor(modelItem => item.ItemID)
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Damage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DamageType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNotes)
                </td>
                <td>
                    <div class="btn-group rounded-0">
                        <button type="button" class="btn btn-light border rounded-0">
                            @Html.ActionLink("Edit Item", "Edit", new { id = item.ItemID }, new { @class = "button btn-light" })
                        </button>
                        <button type="button" class="btn btn-light border rounded-0">
                            @Html.ActionLink("Delete Item", "Delete", new { id = item.ItemID }, new { @class = "button btn-light" })
                        </button>
                    </div>
                </td>
            </tr>
        }
    }
</table>


<div class="col-12 border-top bg-dark text-light">
    <div class="lead ">Armor:</div>
</div>

<table class="table">
