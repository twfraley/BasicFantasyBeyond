@model BasicFantasyBeyond.Models.EquipmentModels.ItemDetails

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Equipment</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Equipment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ItemID)
        <div class="form-group">
            @Html.LabelFor(model => model.ItemName, htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ItemType, htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.ItemType, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Damage, htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Damage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Damage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DamageType, htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.DamageType, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DamageType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ArmorClassBonus, htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ArmorClassBonus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ArmorClassBonus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="col-form-label col-md-2">Usable By:</p>
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.UsableByHuman)
                Human
                @Html.CheckBoxFor(model => model.UsableByElf)
                Dwarf
                @Html.CheckBoxFor(model => model.UsableByHalfling)
                Halfling
                @Html.CheckBoxFor(model => model.UsableByDwarf)
                Dwarf
                @Html.CheckBoxFor(model => model.UsableByFighter)
                Fighter
                @Html.CheckBoxFor(model => model.UsableByCleric)
                Cleric
                @Html.CheckBoxFor(model => model.UsableByThief)
                Thief
                @Html.CheckBoxFor(model => model.UsableByMagicUser)
                Magic User
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ItemNotes, htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ItemNotes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemNotes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
